<section class="marquee-section bg-primary-blue py-40 max-mdscreen6:py-20 overflow-hidden whitespace-nowrap">
  <div class="marquee-wrapper relative flex overflow-hidden">
    <div class="marquee-track">
      {% for block in section.blocks %}
        <div
          class="marquee-item flex mdscreen6:gap-x-40 gap-x-20 items-center mdscreen6:mr-40 mr-20"
          {{ block.shopify_attributes }}
        >
          {% if block.settings.image %}
            <div class="marquee-image mdscreen6:w-60 mdscreen6:h-60 w-60 h-60 shrink-0 rounded-10">
              <img
                src="{{ block.settings.image | image_url }}"
                alt="marquee image"
                height="auto"
                width="auto"
                class="w-full h-full rounded-10"
              >
            </div>
          {% endif %}
          <div class="marquee-text text-white font-heading mdscreen6:text-24 text-18 mdscreen6:leading-30 leading-24">
            {{ block.settings.text }}
          </div>
        </div>
      {% endfor %}

      {%- comment -%} Duplicate for infinite loop {%- endcomment -%}
      {% for block in section.blocks %}
        <div
          class="marquee-item flex mdscreen6:gap-x-40 gap-x-20 items-center mdscreen6:mr-40 mr-20"
          {{ block.shopify_attributes }}
        >
          {% if block.settings.image %}
            <div class="marquee-image mdscreen6:w-60 mdscreen6:h-60 w-60 h-60 shrink-0 rounded-10">
              <img
                src="{{ block.settings.image | image_url }}"
                alt="marquee image"
                height="auto"
                width="auto"
                class="w-full h-full rounded-10"
              >
            </div>
          {% endif %}
          <div class="marquee-text text-white font-heading mdscreen6:text-24 text-18 mdscreen6:leading-30 leading-24">
            {{ block.settings.text }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .marquee-track {
    display: flex;
    width: max-content;
    animation: marqueeScroll 30s linear infinite;
  }

  @keyframes marqueeScroll {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>

{% schema %}
{
  "name": "Marquee",
  "settings": [],
  "blocks": [
    {
      "type": "item",
      "name": "Marquee Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Sample text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee",
      "category": "Custom",
      "blocks": [{ "type": "item" }, { "type": "item" }, { "type": "item" }]
    }
  ]
}
{% endschema %}
