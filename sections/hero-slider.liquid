
<style>
.custom-slider-wrapper {
  position: relative;
  overflow: hidden;
}

.customSwiper .swiper-slide {
  height: 85vh;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: center;
}

.slide-content {
  background: rgba(0, 0, 0, 0.4);
  padding: 2rem;
  color: #fff;
  max-width: 500px;
  margin-left: 2rem;
}

.tagline {
  font-size: 1rem;
  margin-bottom: 0.5rem;
}
.heading {
  font-size: 2rem;
  font-weight: bold;
  margin-bottom: 1rem;
}
.subtext {
  font-size: 1rem;
  margin-bottom: 1.5rem;
}
.btn {
  background: #0b1f38;
  color: white;
  padding: 0.75rem 1.5rem;
  border-radius: 30px;
  text-decoration: none;
  transition: background 0.3s ease;
}
.btn:hover {
  background: #183b63;
}

.custom-pagination {
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 20px;
  width: 100%;
  padding: 0 1rem;
  gap: 10px;
  z-index: 5;
}

.bar {
  width: 100px;
  height: 4px;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 2px;
  overflow: hidden;
  flex-shrink: 0;
}
.bar .fill {
  height: 100%;
  width: 0%;
  background: #fff;
  transition: width 0s;
}

/* Responsive */
@media (max-width: 768px) {
  .slide-content {
    margin-left: 1rem;
    padding: 1rem;
  }

  .heading {
    font-size: 1.5rem;
  }

  .custom-pagination {
    bottom: 15px;
  }

  .bar {
    width: 70px;
  }
}
  .scroll-down-btn {
  position: absolute;
  bottom: 20px;
  right: 20px;
  background: rgba(255, 255, 255, 0.15);
  color: #fff;
  padding: 8px 14px;
  border: 1px solid rgba(255, 255, 255, 0.4);
  border-radius: 30px;
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  font-size: 14px;
  z-index: 10;
  transition: background 0.3s ease, color 0.3s ease;
}

.scroll-down-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  color: #000;
}

</style>


<div class="custom-slider-wrapper">
  <div class="swiper customSwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        {% assign image = block.settings.background_image %}
        {% if image != blank %}
          <div class="swiper-slide" style="background-image: url('{{ image | image_url: width: 1500 }}');">
            <div class="slide-content">
              {% if block.settings.tagline != blank %}
                <p class="tagline">{{ block.settings.tagline }}</p>
              {% endif %}
              {% if block.settings.heading != blank %}
                <h2 class="heading">{{ block.settings.heading }}</h2>
              {% endif %}
              {% if block.settings.subtext != blank %}
                <p class="subtext">{{ block.settings.subtext }}</p>
              {% endif %}
              {% if block.settings.button_link != blank and block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="btn">{{ block.settings.button_text }}</a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="custom-pagination">
    {% for block in section.blocks %}
      <div class="bar"><div class="fill"></div></div>
    {% endfor %}
  </div>
</div>
<div class="scroll-down-btn" onclick="scrollDownByBanner()">
  <span>Scroll</span>
  <svg width="18" height="18" viewBox="0 0 24 24" fill="white" xmlns="http://www.w3.org/2000/svg">
    <circle cx="12" cy="12" r="12" fill="white" opacity="0.2"/>
    <path d="M8 10l4 4 4-4" stroke="#000" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</div>


 <script>
  document.addEventListener('DOMContentLoaded', function () {
    const swiper = new Swiper('.customSwiper', {
      loop: true,
      autoplay: false
    });

    const bars = document.querySelectorAll('.custom-pagination .bar');
    const fills = document.querySelectorAll('.custom-pagination .bar .fill');
    let timer;
    let duration = 5000;

    function startProgress(index) {
      // Reset all
      fills.forEach((fill, i) => {
        fill.style.transition = 'none';
        fill.style.width = '0%';
        if (i === index) {
          void fill.offsetWidth; // trigger reflow
          fill.style.transition = `width ${duration}ms linear`;
          fill.style.width = '100%';
        }
      });

      clearTimeout(timer);
      timer = setTimeout(() => {
        swiper.slideNext();
      }, duration);
    }

    // Click to go to slide
    bars.forEach((bar, i) => {
      bar.addEventListener('click', () => {
        swiper.slideToLoop(i);
      });
    });

    // Sync on slide change
    swiper.on('slideChange', () => {
      const index = swiper.realIndex;
      startProgress(index);
    });

    // Start on first
    startProgress(swiper.realIndex);
  });


</script>


