<div class="faq-contact-wrapper py-[40px] min-990:py-[60px]">
  <div class="container_fluid">
    <div class="faq-contact-section">
      <div class="faq-contact-start flex flex-col min-990:flex-row min-990:items-end gap-x-[30px] min-1400:gap-x-[60px] gap-y-[30px]">
        <div class="faq-left min-990:flex-[0_0_calc(100%_-_551px)] min-1400:flex-[0_0_calc(100%_-_581px)]">
          <div class="pb-[30px] min-990:pb-[44px]">
            {% if section.settings.faq_heading != blank %}
              <h2 class="main-section-title">{{ section.settings.faq_heading }}</h2>
            {% endif %}
            {% if section.settings.faq_subheading != blank %}
              <div class="mt-10">
                <p class="faq-subheading font-body font-normal text-16 leading-[137.5%] text-primary-black capitalize tracking-normal">
                  {{ section.settings.faq_subheading }}
                </p>
              </div>
            {% endif %}
          </div>
          <div class="faq-list">
            {% for block in section.blocks %}
              {% if block.settings.question != blank and block.settings.answer != blank %}
                <details class="faq-item py-[20px] min-990:py-[28px] border-0 border-b-[1px] border-solid border-pale-grey first:border-t-[1px] relative">
                  <summary class="relative font-body font-medium text-18 leading-[140%] text-primary-black capitalize tracking-normal">
                    {{ block.settings.question }}
                  </summary>
                  <div class="faq-answer font-body font-normal text-16 leading-125p text-primary-black tracking-normal pt-[16px]">
                    {{ block.settings.answer }}
                  </div>
                </details>
              {% endif %}
            {% endfor %}
          </div>
        </div>
        <div class="faq-right min-990:flex-[0_0_521px]">
          <div class="faq-right-inside">
            {% if section.settings.contact_heading != blank %}
              <h3 class="contact-heading">{{ section.settings.contact_heading }}</h3>
            {% endif %}
            {% if section.settings.contact_text != blank %}
              <p class="contact-text">{{ section.settings.contact_text }}</p>
            {% endif %}
            {% if section.settings.contact_button_link != blank and section.settings.contact_button_label != blank %}
              <a href="{{ section.settings.contact_button_link }}" class="contact-button">
                {{ section.settings.contact_button_label }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "FAQ With Contact Box",
  "tag": "section",
  "class": "faq-contact-section",
  "settings": [
    {
      "type": "text",
      "id": "faq_heading",
      "label": "FAQ Heading",
      "default": "FAQs"
    },
    {
      "type": "text",
      "id": "faq_subheading",
      "label": "Subheading",
      "default": "Shop Our Summer Trendy Collection."
    },
    {
      "type": "text",
      "id": "contact_heading",
      "label": "Contact Heading",
      "default": "Still Looking For an Answer?"
    },
    {
      "type": "textarea",
      "id": "contact_text",
      "label": "Contact Text",
      "default": "Shoot our team an email and we’ll get back to you ASAP (definitely within 24 hours)."
    },
    {
      "type": "url",
      "id": "contact_button_link",
      "label": "Contact Button Link"
    },
    {
      "type": "text",
      "id": "contact_button_label",
      "label": "Contact Button Label",
      "default": "Contact Us"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "FAQ With Contact Box",
      "category": "Custom"
    }
  ]
}
{% endschema %}
